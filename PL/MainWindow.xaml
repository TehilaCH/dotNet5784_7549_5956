<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Project Management System" Height="450" Width="800" Background="#2c3e50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#34495e" Height="60" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Project Management System" FontSize="20" FontWeight="Bold" Foreground="White" Margin="20" Height="33" Width="271"/>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Handle Engineer" Width="200" Height="50" Margin="0 10" Click="btnEngineer_Click"/>
            <Button Content="Initialize DB" Width="200" Height="50" Margin="0 10" Click="btnInitializeDB_Click"/>
            <Button Content="Reset DB" Width="200" Height="50" Margin="0 10" Click="btnResetDB_Click"/>
        </StackPanel>

        <!--<Button Content="Handle Engineer" HorizontalAlignment="Left" Margin="53,70,0,0" VerticalAlignment="Top"
           Width="150"
           Height="50"
           Click="btnEngineer_Click" />
           <Button Content="Initialize DB" Click="btnInitializeDB_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="150"/>
           <Button Content="Reset DB" HorizontalAlignment="Left" Margin="244,70,0,0" VerticalAlignment="Top" Height="50" Width="150" Click="btnResetDB_Click"/>
        -->
        
    </Grid>
</Window>
